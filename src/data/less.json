            {
                "item": "安装",
                "content": "npm i -g less"
            },
            {
                "item": "编译",
                "content": "lessc style.less style.css"
            },
            {
                "item": "引入",
                "content": "<link rel='stylesheet/less' type='text/css' href='styles.less' />"
            },
            {
                "item": "加载库",
                "content": "<script src='https://cdnjs.cloudflare.com/ajax/libs/less.js/3.11.1/less.min.js'></script>"
            }
        ]
    },
