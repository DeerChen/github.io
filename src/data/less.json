            }
        ]
    },
    {
        "title": "嵌套",
        "points": [
            {
                "item": "&",
                "content": "父级"
            },
            {
                "item": "继承",
                "content": "&:extend()"
            }
        ]
    },
    {
        "title": "转义",
        "points": [
            {
                "item": "~",
                "content": "引号内的内容原样输出, 可以使用JS"
            }
        ]
    },
    {
        "title": "函数",
        "points": [
            {
                "item": "calc()",
                "content": "计算"
            },
            {
                "item": "是否",
                "content": "isnumber()|iscolor()|isurl()"
            },
            {
                "item": "颜色",
                "content": "saturate(饱和度)|lighten(亮度)|darken(暗度)|fade(透明度)|mix(混色)"
            },
            {
                "item": "数学",
                "content": "ceil(向上取整)|floor(向下取整)|percentage(浮点转百分比)|round(四舍五入)|sqrt(开方)|abs(绝对值)|pow(乘方)|"
            }
        ]
    },
    {
        "title": "导入",
        "points": [
            {
                "item": "导入less",
                "content": "@import '文件名'"
            },
            {
                "item": "引用不编译",
                "content": "@import (reference) '文件名.less'"
            },
            {
                "item": "导入多个同名",
                "content": "@import (multiple) '文件名.less'"
            },
            {
                "item": "导入css",
                "content": "@import '文件名.css'"
            }
        ]
    },
